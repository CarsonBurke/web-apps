        <screenshot>
            <image xml:lang="en">
                https://raw.githubusercontent.com/elevenhsoft/WebApps/0.4.0/res/screenshots/window-icon-picker.png
            </image>
            <caption>Icon Picker</caption>
        </screenshot>
    </screenshots>

    <branding>
