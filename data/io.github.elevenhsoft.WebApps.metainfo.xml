<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.elevenhsoft.WebApps</id>
    <developer id="io.github.elevenhsoft">
        <name>elevenhsoft</name>
    </developer>
    <url type="homepage">https://github.com/elevenhsoft/WebApps</url>
    <url type="bugtracker">https://github.com/elevenhsoft/WebApps/issues</url>
    <url type="donation">https://ko-fi.com/elevenhsoft</url>

    <name>COSMIC Web Apps</name>
    <summary>Web App Manager written in rust</summary>

    <metadata_license>MIT</metadata_license>
    <project_license>GPL-3.0-only</project_license>

    <description>
        <p>COSMIC Web Apps written with love and libcosmic.
            Allow you to simply create web applications from given URL working inside separate window of your browser of
            choice.
            Works on most mainstream desktop environments with all the mainstream web browsers installed via flatpak.
        </p>
        <ul>
            <li>Fast and easy to use</li>
            <li>Works out of the box</li>
            <li>In-app icon pack installer</li>
            <li>Supports most mainstream browsers</li>
        </ul>
    </description>

    <launchable type="desktop-id">io.github.elevenhsoft.WebApps.desktop</launchable>
    <content_rating type="oars-1.1"/>

    <screenshots>
        <screenshot type="default" xml:lang="en">
            <image>https://raw.githubusercontent.com/elevenhsoft/WebApps/0.4.0/res/screenshots/window-dark.png</image>
